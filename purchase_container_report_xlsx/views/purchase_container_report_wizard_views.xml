<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_container_report_wizard_form" model="ir.ui.view">
        <field name="name">purchase.container.report.wizard.form</field>
        <field name="model">purchase.container.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Container Excel Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_generate_excel" type="object" string="Generate Excel" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_container_report_wizard" model="ir.actions.act_window">
        <field name="name">Container Excel Report</field>
        <field name="res_model">purchase.container.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
